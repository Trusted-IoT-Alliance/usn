{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "js",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "diagnostics": false
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts"
  ]
}